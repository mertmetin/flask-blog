{% macro render_pagination(pagination, endpoint, view_args) %}
<nav class="serendipity_pagination block_level" role="navigation">
        <ul class="clearfix">

  {% if pagination.has_next %}
	<li class="info"><span>Page {{pagination.page}} of {{pagination.pages}}, totaling {{pagination.total}} entries</span></li>
  <li class="next">&nbsp;</li>
         <li class="next"><a href="{{ url_for(endpoint, page = pagination.next_num, **view_args) }}">next page →</a></li>

{% endif %}

{% if pagination.has_prev%}
<li class="info"><span>Page {{pagination.page}} of {{pagination.pages}}, totaling {{pagination.total}} entries</span></li>
         <li class="prev"><a href="{{ url_for(endpoint, page = pagination.prev_num) }}">← previous page</a></li>


{% endif %}
     </ul>
    </nav>
{% endmacro %}
